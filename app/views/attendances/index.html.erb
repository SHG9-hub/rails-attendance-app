<h1>勤怠管理</h1>

<div>
  <%= button_to "出勤", attendances_path, method: :post %>
</div>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>出勤時間</th>
      <th>退勤時間</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.created_at.to_date %></td>
        <td><%= attendance.check_in&.strftime("%H:%M") %></td>
        <td><%= attendance.check_out&.strftime("%H:%M") %></td>
        <td>
          <% if attendance.check_out.nil? %>
            <%= button_to "退勤", attendance_path(attendance), method: :patch %>
          <% end %>
          <%= button_to "削除", attendance_path(attendance), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 